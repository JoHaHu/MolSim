<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
          xs:noNamespaceSchemaLocation="../src/lib/simulator/io/xml_reader/SimulationInputSchema.xsd">
    <header base_name="Collision of two bodies"
            output_file="../../output/collision_simulation"
            output_frequency="0"
            t_end="5" seed="1337" delta_t="0.0005"/>
    <thermostat t_init="1" frequency="1000"/>
    <container>
        <linked_cells cutoff_radius="3.0">
            <domain_size x="120" y="120" z="4"/>
            <boundary_conditions>
                <boundary_condition type="periodic"/>
                <boundary_condition type="reflecting"/>
                <boundary_condition type="periodic"/>
                <boundary_condition type="reflecting"/>
                <boundary_condition type="periodic"/>
                <boundary_condition type="periodic"/>
            </boundary_conditions>
        </linked_cells>
        <!--        <vector/>-->
    </container>
    <forces>
        <lennard_jones>
            <particleTypes>
                <particleType id="0" sigma="1" epsilon="5" mass="1"/>
            </particleTypes>
            <particles>
                <cuboid spacing="1.1225" particleTypeId="0">
                    <coordinate x="5" y="5" z="2"/>
                    <dimensions x="90" y="90" z="1"/>
                    <velocity x="0" y="0" z="0"/>
                </cuboid>
            </particles>
        </lennard_jones>
    </forces>
</scenario>
