<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xs="http://www.w3.org/2001/XMLSchema-instance"
          xs:noNamespaceSchemaLocation="../src/lib/simulator/io/xml_reader/SimulationInputSchema.xsd">
    <header base_name="Nanoscale flow simulation"
            output_file="../../output/nanoflow_simulation"
            output_frequency="100"
            t_end="500" seed="1337"
            delta_t="0.0005"
            dimensions="3"
            vectorized="false"
            parallelized="true"
    />
    <thermostat t_init="40" frequency="1000" brownian_motion="0"/>
    <nanotube n_bins="50" iterations="10000"/>

    <container>
        <linked_cells cutoff_radius="2.75">
            <domain_size x="30" y="30" z="12"/>
            <boundary_conditions>
                <boundary_condition type="outflow"/>
                <boundary_condition type="periodic"/>
                <boundary_condition type="periodic"/>
                <boundary_condition type="outflow"/>
                <boundary_condition type="periodic"/>
                <boundary_condition type="periodic"/>
            </boundary_conditions>
        </linked_cells>
        <!-- <vector/>-->
    </container>
    <forces>
        <lennard_jones>
            <gravity>-0.8</gravity>
            <particleTypes>
                <particleType id="0" sigma="1.1" epsilon="2.0" mass="1.0"/> <!-- left wall -->
                <particleType id="1" sigma="1.1" epsilon="2.0" mass="1.0"/> <!-- right wall -->
                <particleType id="2" sigma="1.0" epsilon="1.0" mass="1.0"/> <!-- fluid -->
            </particleTypes>
            <particles>
                <cuboid spacing="1" particleTypeId="0" fixed="1">
                    <coordinate x="1.0" y="0.5" z="0.5"/>
                    <dimensions x="2" y="30" z="12"/>
                    <velocity x="0" y="0" z="0"/>
                </cuboid>
                <cuboid spacing="1" particleTypeId="1" fixed="1">
                    <coordinate x="27.2" y="0.5" z="0.5"/>
                    <dimensions x="2" y="30" z="12"/>
                    <velocity x="0" y="0" z="0"/>
                </cuboid>
                <cuboid spacing="1.2" particleTypeId="2">
                    <coordinate x="3.2" y="0.6" z="0.6"/>
                    <dimensions x="20" y="25" z="10"/>
                    <velocity x="0" y="0" z="0"/>
                </cuboid>
            </particles>
        </lennard_jones>
    </forces>
</scenario>